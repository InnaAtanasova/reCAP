<mvc:View controllerName="capcom.recap.App"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  height="100%">
  <App>
    <Page showHeader="false">
      <VBox alignItems="Center"
        justifyContent="Center"
        height="100%">
        <HBox justifyContent="SpaceAround">
          <VBox>
            <core:HTML id="zsh"
              content="{/cli}" />
            <Text id="output"
              visible="false"
              renderWhitespace="true"
              class="cursor" />
          </VBox>
        </HBox>
      </VBox>
    </Page>
  </App>
</mvc:View>